@import "nib"
@import "normalize.styl"
@import "fonts.styl"


// VARIABLES
gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
rojo = #DB255B
// VARIABLES

// MIXINS
// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	animation parametro
	
	
// MIXINS

// GENERALES
body
	font-family 'Varela Round', sans-serif
	font-size 16px 	
figure
	margin 0
img
	vertical-align top
a
	text-decoration none
ul
	margin 0
	padding 0
// GENERALES

// OOCSS CLASES
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	background rgba(black, .3)
	bottom 0
	left 0
	position absolute
	right 0
.author
	color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.center-block
	margin-right auto
	margin-left auto
.center-text
	text-align center
.container
	font-size 0
	padding 1.4rem
	text-align center
.left
	float left
.right
	float right
.input
	border 1px gris_claro solid
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.menu
	display none
.name
	color gris_oscuro
.padding
	padding 1em
.padding-tb
	padding 1em 0
.right-text
	text-align right
.relative
	position relative
.round
	border-radius 50%
	overflow hidden
.search-icon
	position absolute
	left .6em
	top .8em
	color gris_claro
.close-icon
	position absolute
	right .5em
	top .5em
	font-size 1.2rem
	color gris_claro
.wrap
	width 1000px

//GENERALES
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.playing
	&.small
		width 20rem
		margin 0 auto
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin-right auto
		margin-left auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
		animation 10s state infinite linear
		
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite

// ANIMACION
@keyframes state
	0%
		width 0
	100%
		width 100%

@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
// ANIMACION
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	
	&:nth-child(even)
		margin-right 0em
	p
		margin .5em 0

.playlist
	border-left 1px solid gris_claro
	display none
	padding 0 2rem
	width 22rem
	.list
		list-style none
	.item
		padding 1rem 0
	.action
		font-size .8em
.logo
	background white
	display none
	overflow hidden
	padding 1.3em 0
.isotipo
	width 122px
.avatar
	height 38px
	width 38px
.username
	color gris_claro
	margin-left .5em
	position relative
	top 9px
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 8px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
		

		
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
			
@media screen and (min-width: 1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.header
		border none
		height auto
		.title
			display none
	.menu
		background gris_mas_claro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform UPPERCASE
				&:hover
					border-top 5px solid gris_oscuro		
				
	.music
		float left
		width 32.5rem
		.description
			display none
	.playing
		padding-top 1.3em
		&.large
			margin-left auto
			margin-right auto
			overflow hidden
			width 62.5rem
	.playlist
	.logo
		display block

			